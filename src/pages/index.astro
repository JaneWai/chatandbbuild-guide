---
import Layout from '../layouts/Layout.astro';
import FeatureCard from '../components/FeatureCard.astro';
import DocCard from '../components/DocCard.astro';
import TutorialCard from '../components/TutorialCard.astro';
import StepCard from '../components/StepCard.astro';
import FaqItem from '../components/FaqItem.astro';
---

<Layout title="ChatAndBuild - Build Apps Through Conversation">
	<!-- Hero Section -->
	<section class="hero">
		<div class="container">
			<h1>Build Apps Through <span class="text-gradient">Conversation</span></h1>
			<p class="hero-subtitle">
				ChatAndBuild is a revolutionary platform that lets you create applications simply by having a conversation.
				No coding required - just describe what you want, and watch it come to life.
			</p>
			<div class="hero-buttons">
				<a href="#guidance" class="button">Get Started</a>
				<a href="#documentation" class="button secondary">Documentation</a>
			</div>
		</div>
	</section>

	<!-- Introduction Section -->
	<section id="introduction" class="introduction">
		<div class="container">
			<h2 class="section-title">What is <span class="text-gradient">ChatAndBuild</span>?</h2>
			<p class="section-subtitle">
				ChatAndBuild transforms the way applications are created by leveraging the power of conversation.
			</p>
			
			<div class="features">
				<FeatureCard 
					title="Conversation-Driven Development" 
					description="Simply describe what you want to build, and our AI will help you create it step by step."
					icon="ðŸ’¬"
				/>
				<FeatureCard 
					title="No Coding Required" 
					description="Build fully functional applications without writing a single line of code."
					icon="ðŸš€"
				/>
				<FeatureCard 
					title="Real-time Preview" 
					description="See your application come to life in real-time as you describe your requirements."
					icon="ðŸ‘ï¸"
				/>
				<FeatureCard 
					title="Customizable Templates" 
					description="Start with pre-built templates and customize them to your needs through conversation."
					icon="ðŸ“"
				/>
			</div>
		</div>
	</section>

	<!-- Documentation Section -->
	<section id="documentation" class="documentation">
		<div class="container">
			<h2 class="section-title">Documentation</h2>
			<p class="section-subtitle">
				Comprehensive guides and references to help you make the most of ChatAndBuild.
			</p>
			
			<div class="docs-grid">
				<DocCard 
					title="Getting Started Guide" 
					description="Learn the basics of ChatAndBuild and create your first application."
					href="#"
				/>
				<DocCard 
					title="Core Concepts" 
					description="Understand the fundamental concepts behind ChatAndBuild."
					href="#"
				/>
				<DocCard 
					title="API Reference" 
					description="Detailed documentation of all available APIs and integrations."
					href="#"
				/>
				<DocCard 
					title="Templates Library" 
					description="Browse and use our collection of pre-built templates."
					href="#"
				/>
				<DocCard 
					title="Best Practices" 
					description="Tips and tricks to create better applications with ChatAndBuild."
					href="#"
				/>
				<DocCard 
					title="Troubleshooting" 
					description="Solutions to common issues and how to resolve them."
					href="#"
				/>
			</div>
		</div>
	</section>

	<!-- Guidance Section -->
	<section id="guidance" class="guidance">
		<div class="container">
			<h2 class="section-title">Getting Started</h2>
			<p class="section-subtitle">
				Follow these simple steps to begin building your first application with ChatAndBuild.
			</p>
			
			<div class="steps">
				<StepCard 
					number="1" 
					title="Create an Account" 
					description="Sign up for a free ChatAndBuild account to get started with your first project."
				/>
				<StepCard 
					number="2" 
					title="Start a New Project" 
					description="Choose from a blank canvas or select one of our pre-built templates."
				/>
				<StepCard 
					number="3" 
					title="Describe Your Application" 
					description="Tell ChatAndBuild what you want to build using natural language."
				/>
				<StepCard 
					number="4" 
					title="Refine and Customize" 
					description="Provide feedback and additional details to refine your application."
				/>
				<StepCard 
					number="5" 
					title="Preview and Deploy" 
					description="Test your application in real-time and deploy it with a single click."
				/>
			</div>
			
			<div class="cta">
				<h3>Ready to build your first application?</h3>
				<a href="#" class="button">Start Building Now</a>
			</div>
		</div>
	</section>

	<!-- Tutorials Section -->
	<section id="tutorials" class="tutorials">
		<div class="container">
			<h2 class="section-title">Tutorial Videos</h2>
			<p class="section-subtitle">
				Watch step-by-step tutorials to learn how to use ChatAndBuild effectively.
			</p>
			
			<div class="tutorials-grid">
				<TutorialCard 
					title="Getting Started with ChatAndBuild" 
					description="Learn the basics and create your first application in under 10 minutes."
					thumbnail="/images/tutorial-1.jpg"
					duration="10:23"
					href="#"
				/>
				<TutorialCard 
					title="Building a Todo App" 
					description="Create a fully functional todo application with local storage."
					thumbnail="/images/tutorial-2.jpg"
					duration="15:47"
					href="#"
				/>
				<TutorialCard 
					title="Creating a Landing Page" 
					description="Design and deploy a professional landing page for your business."
					thumbnail="/images/tutorial-3.jpg"
					duration="12:35"
					href="#"
				/>
				<TutorialCard 
					title="Working with Databases" 
					description="Connect your application to a database without writing SQL."
					thumbnail="/images/tutorial-4.jpg"
					duration="18:12"
					href="#"
				/>
			</div>
			
			<div class="view-more">
				<a href="#" class="button secondary">View All Tutorials</a>
			</div>
		</div>
	</section>

	<!-- FAQ Section -->
	<section id="faq" class="faq">
		<div class="container">
			<h2 class="section-title">Frequently Asked Questions</h2>
			<p class="section-subtitle">
				Find answers to the most common questions about ChatAndBuild.
			</p>
			
			<div class="faq-container">
				<FaqItem 
					question="What is ChatAndBuild?" 
					answer="ChatAndBuild is a platform that allows you to create applications through conversation. Simply describe what you want to build, and our AI will help you create it step by step, without requiring any coding knowledge."
				/>
				<FaqItem 
					question="Do I need to know how to code?" 
					answer="No, you don't need any coding knowledge to use ChatAndBuild. Our platform is designed to be accessible to everyone, regardless of technical background. You can create fully functional applications just by describing what you want."
				/>
				<FaqItem 
					question="What types of applications can I build?" 
					answer="You can build a wide range of applications with ChatAndBuild, including web applications, mobile apps, landing pages, e-commerce sites, blogs, dashboards, and more. If you can describe it, chances are you can build it with ChatAndBuild."
				/>
				<FaqItem 
					question="How much does ChatAndBuild cost?" 
					answer="ChatAndBuild offers a free tier that allows you to create and deploy basic applications. For more advanced features and higher usage limits, we offer premium plans starting at $9.99 per month. Visit our pricing page for more details."
				/>
				<FaqItem 
					question="Can I export my code?" 
					answer="Yes, all premium plans allow you to export the source code of your applications. This gives you full ownership and the ability to host your applications anywhere you want."
				/>
				<FaqItem 
					question="How do I deploy my application?" 
					answer="ChatAndBuild provides one-click deployment to our hosting service. Your application will be instantly available online with a unique URL. Premium users can also export their applications and deploy them to their preferred hosting service."
				/>
				<FaqItem 
					question="Is my data secure?" 
					answer="Yes, we take data security very seriously. All data is encrypted both in transit and at rest. We never share your data with third parties, and we comply with all relevant data protection regulations."
				/>
				<FaqItem 
					question="Can I collaborate with others?" 
					answer="Yes, our Team and Enterprise plans support collaborative development. You can invite team members to work on your projects, assign roles, and track changes."
				/>
			</div>
		</div>
	</section>

	<!-- Newsletter Section -->
	<section class="newsletter">
		<div class="container">
			<h2>Stay Updated</h2>
			<p>Subscribe to our newsletter to receive the latest updates, tutorials, and tips.</p>
			<form class="newsletter-form">
				<input type="email" placeholder="Enter your email" required>
				<button type="submit" class="button">Subscribe</button>
			</form>
		</div>
	</section>
</Layout>

<style>
	/* Hero Section */
	.hero {
		background: linear-gradient(rgba(var(--bg-dark), 0.9), rgba(var(--bg-dark), 0.8)), 
					url('/images/hero-bg.jpg') center/cover no-repeat;
		color: white;
		padding: 6rem 2rem;
		text-align: center;
	}
	
	.hero h1 {
		font-size: 3.5rem;
		font-weight: 800;
		line-height: 1.2;
		margin-bottom: 1.5rem;
	}
	
	.hero-subtitle {
		font-size: 1.25rem;
		max-width: 700px;
		margin: 0 auto 2.5rem;
		color: rgba(255, 255, 255, 0.9);
	}
	
	.hero-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
	}
	
	/* Introduction Section */
	.introduction {
		background-color: white;
	}
	
	.features {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin-top: 3rem;
	}
	
	/* Documentation Section */
	.documentation {
		background-color: rgb(var(--bg-light));
	}
	
	.docs-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 1.5rem;
	}
	
	/* Guidance Section */
	.guidance {
		background-color: white;
	}
	
	.steps {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		max-width: 800px;
		margin: 0 auto;
	}
	
	.cta {
		margin-top: 4rem;
		text-align: center;
	}
	
	.cta h3 {
		font-size: 1.5rem;
		margin-bottom: 1.5rem;
	}
	
	/* Tutorials Section */
	.tutorials {
		background-color: rgb(var(--bg-light));
	}
	
	.tutorials-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
	}
	
	.view-more {
		margin-top: 3rem;
		text-align: center;
	}
	
	/* FAQ Section */
	.faq {
		background-color: white;
	}
	
	.faq-container {
		max-width: 800px;
		margin: 0 auto;
	}
	
	/* Newsletter Section */
	.newsletter {
		background: var(--gradient);
		color: white;
		text-align: center;
		padding: 4rem 2rem;
	}
	
	.newsletter h2 {
		font-size: 2rem;
		margin-bottom: 1rem;
	}
	
	.newsletter p {
		font-size: 1.1rem;
		margin-bottom: 2rem;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
	}
	
	.newsletter-form {
		display: flex;
		max-width: 500px;
		margin: 0 auto;
		gap: 0.5rem;
	}
	
	.newsletter-form input {
		flex: 1;
		padding: 0.75rem 1rem;
		border: none;
		border-radius: 0.375rem;
		font-size: 1rem;
	}
	
	.newsletter-form .button {
		background-color: rgb(var(--bg-dark));
	}
	
	.newsletter-form .button:hover {
		background-color: rgba(var(--bg-dark), 0.8);
	}
	
	@media (max-width: 768px) {
		.hero h1 {
			font-size: 2.5rem;
		}
		
		.hero-subtitle {
			font-size: 1.1rem;
		}
		
		.hero-buttons {
			flex-direction: column;
			align-items: center;
		}
		
		.newsletter-form {
			flex-direction: column;
		}
	}
</style>
